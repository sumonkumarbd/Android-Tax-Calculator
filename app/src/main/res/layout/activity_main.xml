<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main">

    <!--    parent-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background_dark"
        >
<!--        morque_text-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base"
                android:alpha=".9"
                />
            <TextView
                android:id="@+id/text_morque"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:textSize="@dimen/head_bold"
                android:fontFamily="@font/banglafont"
                android:gravity="top"
                android:layout_marginTop="-20dp"
                android:textColor="@color/white"
                android:alpha="1"
                android:textEditPasteWindowLayout="@string/intro"
                android:singleLine="true"
                android:text="@string/intro" />
        </LinearLayout><!--        morque_text-->

<!--Upper color bord-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:background="@drawable/singecolor_button"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:elevation="@dimen/Default"
                android:fontFamily="@font/titir"
                android:textSize="@dimen/head_bolder"
                android:layout_marginTop="-40dp"
                />


        </LinearLayout><!--Upper color bord-->

<!--        main card-->
        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="400dp"
            android:orientation="vertical"
            android:layout_marginTop="-70dp"
            android:elevation="@dimen/Default"
            android:layout_gravity="center"
            android:background="@drawable/tnas_curved40"
            >
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="3"
                android:columnCount="2"
                >

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_rowWeight="1"
                    android:layout_columnWeight="1"
                    android:elevation="@dimen/head_bolder"
                    android:layout_margin="15dp"
                    >

                    <Button
                        android:id="@+id/slabCalcButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/two_color"
                        android:text="@string/app_name"
                        android:layout_gravity="center"
                        />

                </com.google.android.material.card.MaterialCardView>

            </GridLayout>







        </LinearLayout><!--        main card-->


































</LinearLayout>
<!--    parent-->

</LinearLayout>
<!--grandParent-->