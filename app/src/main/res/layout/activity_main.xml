<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main">


    <TextView
        android:id="@+id/text_morque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:textSize="@dimen/head_bold"
        android:fontFamily="@font/banglafont"
        android:gravity="top"
        android:textEditPasteWindowLayout="@string/intro"
        android:singleLine="true"
        android:text="@string/intro" />
    <!--    parent-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        >

        <Button
            android:id="@+id/slabCalcButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/two_color"
            android:text="@string/app_name"
            />





</LinearLayout>
<!--    parent-->

</LinearLayout>
